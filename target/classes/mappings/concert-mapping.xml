<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ConcertMapper">
	<select id="concertList" resultType="Concert">
		select * from total_ent where category = '1'
	</select>
	<select id="concertDetail" resultType="Concert">
		select * from total_ent where tseq =#{tseq}
	</select>
	<select id="List" resultType="Concert">
		select * from total_ent
	</select>
	<select id="categoryList" resultType="Concert" parameterType="String">
		select * from total_ent where category = #{category}
	</select>
	
	<update id="updatetotalent">
		update total_ent set tname = #{tname},place=#{place},time = #{time},price = #{price}
		where tseq = #{tseq}
	</update>
	
	<insert id="inserttotalent">
		insert into total_ent values
		 (tseq.NEXTVAL,#{category},#{tname},#{place},#{time},#{sdate},#{edate},#{price},#{seat},#{pimg},#{cimg}) 
	</insert>
</mapper>
